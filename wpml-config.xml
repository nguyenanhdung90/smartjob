<wpml-config>
    <custom-fields>
        <custom-field action="copy">et_job_package</custom-field>
        <custom-field action="copy">et_featured</custom-field>
        <custom-field action="copy">et_applicant_detail</custom-field>
        <custom-field action="copy">et_applicant_detail</custom-field>
        <custom-field action="copy">et_job_paid</custom-field>
        <custom-field action="copy">et_job_order</custom-field>
        <custom-field action="copy">et_apply_method</custom-field>
        <custom-field action="copy">et_apply_email</custom-field>

        <custom-field action="translate">et_applicant_detail</custom-field>
        
        <custom-field action="translate">et_location</custom-field>
        <custom-field action="translate">et_full_location</custom-field>
        <custom-field action="copy">et_location_lat</custom-field>
        <custom-field action="copy">et_location_lng</custom-field>


        <custom-field action="translate">et_education</custom-field>
        <custom-field action="translate">et_experience</custom-field>
        <custom-field action="translate">et_location</custom-field>
        <custom-field action="translate">et_profession_title</custom-field>
        

        <custom-field action="copy">je_include_search</custom-field>
        <custom-field action="copy">et_url</custom-field>
        <custom-field action="copy">et_privacy</custom-field>
        <custom-field action="copy">et_contact</custom-field>
        <custom-field action="copy">et_privacy_post_name</custom-field>
        
    </custom-fields>
    <custom-types>
        <custom-type translate="1">job</custom-type>
        <custom-type translate="1">resume</custom-type>
    </custom-types>    
    <taxonomies>
        <taxonomy translate="1">job_category</taxonomy>
        <taxonomy translate="1">job_type</taxonomy>
        <taxonomy translate="1">resume_category</taxonomy>
        <taxonomy translate="1">available</taxonomy>
    </taxonomies>    
    <admin-texts>
        <key name="et_general_opts">
            <key name="et_site_title" />
            <key name="et_site_desc" />
            <key name="et_site_demon" />
            <key name="et_copyright" />
        </key>

        <key name="et_jobengine_mailtemplate">
            <key name="et_register_mail" />
            <key name="et_forgot_pass_mail" />
            <key name="et_reset_pass_mail" />
            <key name="et_apply_mail" />
            <key name="et_remind_mail" />
            <key name="et_approve_mail" />
            <key name="et_reject_mail" />
            <key name="et_archive_mail" />
            <key name="et_cash_notification_mail" />
        </key>
        <key name="blogname" />
        <key name="blogdescription" />
        <key name="je_resume_category_title" />
        <key name="je_resume_available_title" />
    </admin-texts>    

    <language-switcher-settings>
        <key name="icl_lang_sel_config">
            <key name="font-current-normal">#444444</key>
            <key name="font-current-hover">#000000</key>
            <key name="background-current-normal">#ffffff</key>
            <key name="background-current-hover">#eeeeee</key>
            <key name="font-other-normal">#444444</key>
            <key name="font-other-hover">#000000</key>
            <key name="background-other-normal">#ffffff</key>
            <key name="background-other-hover">#eeeeee</key>
            <key name="border">#cdcdcd</key>
        </key>
        <key name="icl_lang_sel_footer_config">
            <key name="font-current-normal">#444444</key>
            <key name="font-current-hover">#000000</key>
            <key name="background-current-normal">#ffffff</key>
            <key name="background-current-hover">#eeeeee</key>
            <key name="font-other-normal">#444444</key>
            <key name="font-other-hover">#000000</key>
            <key name="background-other-normal">#ffffff</key>
            <key name="background-other-hover">#eeeeee</key>
            <key name="border">#cdcdcd</key>
        </key>    
        <key name="icl_language_switcher_sidebar">0</key>  
        <key name="icl_widget_title_show">0</key>
        <key name="icl_lang_sel_type">dropdown</key>
        <key name="icl_lso_link_empty">0</key>
        <key name="icl_lso_flags">0</key>
        <key name="icl_lso_native_lang">1</key>
        <key name="icl_lso_display_lang">1</key>
        <key name="icl_lang_sel_footer">0</key>
        <key name="icl_post_availability">0</key>
        <key name="icl_post_availability_position">below</key>
        <key name="icl_post_availability_text">This post is also available in: %s</key>    
    </language-switcher-settings>    
</wpml-config>


